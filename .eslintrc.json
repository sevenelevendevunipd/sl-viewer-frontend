{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended",
        "plugin:mobx/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "@typescript-eslint",
        "mobx",
        "react"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "mobx/missing-observer": "off"
    },
    "root": true,
    "settings": {
        "react": {
            "version": "18.2"
        }
    },
    "ignorePatterns": [
        "**/*.config.js"
    ]
}